# Hydroponic System Configuration Template
# Copy this to .env and fill in your actual values

# WiFi Configuration
WIFI_SSID=12BravoP
WIFI_PASSWORD=$apper!2B10

# MQTT Broker (RPi5)
MQTT_BROKER=10.0.0.62
MQTT_PORT=1883
MQTT_USERNAME=hydro_user
MQTT_PASSWORD=your_secure_mqtt_password_here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_PHONE=+1234567890
TWILIO_TO_PHONE=+1234567890

# xAI Grok API
XAI_API_KEY=your_xai_grok_api_key_here
XAI_API_URL=https://api.x.ai/v1/chat/completions

# System Configuration
RPI5_IP=10.0.0.62
COOL_TOWER_ESP32_IP=10.0.0.63
WARM_TOWER_ESP32_IP=10.0.0.64

# Camera Configuration (Pi Zero 2W IPs)
COOL_TOWER_VISIBLE_CAM_IP=10.0.0.65
COOL_TOWER_NOIR_CAM_IP=10.0.0.66
WARM_TOWER_VISIBLE_CAM_IP=10.0.0.67
WARM_TOWER_NOIR_CAM_IP=10.0.0.68

# Image Storage Path on RPi5
IMAGE_STORAGE_PATH=/home/pi/hydro_images
NFS_BACKUP_PATH=/mnt/hydro_backup
RETENTION_DAYS=365
IMAGE_QUALITY_THRESHOLD=10
HARVEST_PHOTO_RETENTION_YEARS=5

# Logging
LOG_LEVEL=INFO
LOG_PATH=/home/pi/hydro_logs

# Email Configuration (weekly reports)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_TO=your_email@gmail.com

# xAI Model & Cost Limits
XAI_MODEL=grok-beta
XAI_MAX_COST_PER_DAY=5.00

# Plant Tracking
MAX_PLANTS_PER_TOWER=30
PLANT_ID_FORMAT=C01A
ENABLE_HARVEST_PREDICTOR=true

# VPD Monitoring
VPD_CHECK_INTERVAL_MINUTES=15
VPD_ALERT_THRESHOLD_LOW=0.4
VPD_ALERT_THRESHOLD_HIGH=1.5

# Dosing Pump Configuration
RESERVOIR_VOLUME_GALLONS=5
PUMP_ML_PER_SECOND=1.0
ENABLE_AUTO_DOSING=false
MAX_DOSE_ML_PER_DAY=100

# Dosing Solution Concentrations (grams per liter)
EPSOM_SALT_CONCENTRATION=100
CALCIUM_NITRATE_CONCENTRATION=150
POTASSIUM_BICARBONATE_CONCENTRATION=50
PH_DOWN_CONCENTRATION=10

# Alert Settings
ALERT_COOLDOWN_MINUTES=60
DAILY_SUMMARY_TIME=06:00
WEEKLY_SUMMARY_DAY=Sunday
WEEKLY_SUMMARY_TIME=06:00

# Tailscale Remote Access
TAILSCALE_HOSTNAME=pydro-ai
TAILSCALE_IP=100.x.x.x

# Home Assistant Integration
ENABLE_HOME_ASSISTANT=true
HA_MQTT_DISCOVERY_PREFIX=homeassistant
HA_ARRIVAL_DELAY_MINUTES=5

# Alexa Integration
ENABLE_ALEXA=true
ALEXA_DEVICE_NAME=Echo Show 21
ALEXA_SKILL_ID=your_alexa_skill_id
